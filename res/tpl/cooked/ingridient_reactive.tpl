<div data-role="reactiv" class="reagent" data-reactive_hash="{tag:hash}" data-inc_date="{tag:inc_date}" data-quantity_left="{tag:quantity_left}" data-reactiv_name="{tag:menu:name}" data-quantity_left="{tag:quantity_left}" data-reactiv_units_short="{tag:units:short_name}">
    <table>
        <tr>
            <td class="name"><div class="reagent_name">{tag:menu:name}</div><span class="inc_date">Створено: {tag:inc_date}</span></td>
            <td class="quantity_left">{tag:quantity_left}&nbsp;{tag:units:short_name}</td>
            <td class="button"><span class="add" data-role="button"></span></td>
        </tr>
    </table>
</div>